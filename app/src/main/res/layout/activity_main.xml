<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccent"
    android:id="@+id/main_login_layout"
    tools:context=".Activity.MainActivity">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="24dp"
        >

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/phoneContainer"
            android:layout_width="512dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:hint="Phone"
            android:theme="@style/TextLabel"
            app:layout_constraintEnd_toEndOf="@+id/imageView"
            app:layout_constraintStart_toStartOf="@+id/imageView"
            app:layout_constraintTop_toBottomOf="@+id/imageView">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edtPhone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableEnd="@drawable/ic_phone_android_black_24dp"
                android:inputType="phone"
                android:padding="12dp"
                android:textSize="24sp" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/codeContainer"
            android:layout_width="512dp"
            android:layout_height="wrap_content"
            android:hint="Code"
            android:theme="@style/TextLabel"
            android:visibility="visible"
            android:layout_marginTop="12dp"
            app:layout_constraintEnd_toEndOf="@+id/phoneContainer"
            app:layout_constraintStart_toStartOf="@+id/phoneContainer"
            app:layout_constraintTop_toBottomOf="@+id/phoneContainer">


            <com.google.android.material.textfield.TextInputEditText
                android:drawablePadding="12dp"
                android:textSize="24sp"
                android:id="@+id/edtCode"
                android:padding="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableEnd="@drawable/ic_lock_outline_black_24dp"
                android:drawableTint="@color/enabled_brown"
                android:inputType="number" />


        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="64dp"
            android:text="Banan &amp; Basoz"
            android:textColor="@color/enabled_brown"
            android:textSize="64sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="for hijab Bride"
            android:textSize="54sp"
            app:layout_constraintEnd_toEndOf="@+id/textView"
            app:layout_constraintStart_toStartOf="@+id/textView"
            app:layout_constraintTop_toBottomOf="@+id/textView" />


        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:src="@drawable/salon_icon"
            app:layout_constraintEnd_toEndOf="@+id/textView2"
            app:layout_constraintStart_toStartOf="@+id/textView2"
            app:layout_constraintTop_toBottomOf="@+id/textView2" />

        <Button
            android:id="@+id/btnLogin"
            android:layout_width="256dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:background="@drawable/btn_pink_rounded"
            android:drawableStart="@drawable/ic_send_black_24dp"
            android:drawablePadding="12dp"
            android:drawableTint="@color/enabled_brown"
            android:paddingStart="18sp"
            android:paddingTop="18sp"
            android:paddingEnd="18sp"
            android:paddingBottom="18sp"
            android:text="Login"
            android:textAllCaps="false"
            android:textColor="@color/enabled_brown"
            android:textSize="24sp"
            android:textStyle="normal"
            app:layout_constraintEnd_toEndOf="@+id/phoneContainer"
            app:layout_constraintStart_toStartOf="@+id/phoneContainer"
            app:layout_constraintTop_toBottomOf="@+id/codeContainer" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>

